{% extends "base.html.twig" %}

{% block title %}produit - créer{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="col-12 text-center my-5">
                <h1>Créer un produit</h1>
            </div>
            <div class="col-6 offset-3">
                {{ form_start(productForm) }}
                    {{ form_row(productForm.name, {
                        'label': 'Nom'
                    }) }}
                    {{ form_row(productForm.description, {
                        'label': 'Description'
                    }) }}
                    {{ form_row(productForm.price, {
                        'label': 'Prix'
                    }) }}
                    {{ form_row(productForm.stock, {
                        'label': 'Stock'
                    }) }}
                    {{ form_row(productForm.category, {
                        'label': 'Catégorie'
                    }) }}
                    <div class="row">
                        <div class="col-12 text-end">
                            <a href="{{ path('product_index') }}" class="btn btn-outline-danger">Annuler</a>
                            <input type="submit" value="Créer" class="btn btn-success">
                        </div>
                    </div>
                {{ form_end(productForm) }}
            </div>
        </div>
    </div>

{% endblock %}
